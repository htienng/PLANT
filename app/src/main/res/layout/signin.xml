<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="412dp"
    android:layout_height="732dp"
    android:background="#E7E8E3">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="149dp"
        android:layout_height="134dp"
        android:layout_marginTop="31dp"
        android:gravity="center"
        android:hint="Hi!"
        android:textColor="#2D6936"
        android:textColorHint="#2D6936"
        android:textSize="70dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="334dp"
        android:layout_height="46dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="48dp"
        android:hint="Let’s learn more about plants"
        android:textColor="#2D6936"
        android:textColorHint="#2D6936"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="329dp"
        android:layout_height="58dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/borderlayout3"
        android:ems="15"
        android:hint="  Gmail"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="329dp"
        android:layout_height="58dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/borderlayout3"
        android:ems="15"
        android:hint="  Password"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="left"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="-47dp"
        android:background="@drawable/eye"
        app:layout_constraintStart_toEndOf="@+id/editText2"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Remember me"
        android:textColor="#000"
        android:textSize="15dp"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="385dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="63dp"
        android:text=" Forgot Password?"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <TextView
        android:id="@+id/button3"
        android:layout_width="167dp"
        android:layout_height="59dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="#47734D"
        android:ellipsize="middle"
        android:text="Sign In"
        android:background="@drawable/borderlayout5"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="400dp"
        android:layout_height="35dp"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/or"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <ImageView
        android:id="@+id/button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/ggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/button4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/fbook"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/button5"
        android:layout_width="44dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/ip"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="203dp"
        android:layout_height="37dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="39dp"
        android:hint="Don’t Have Account?"
        android:textColor="#111111"
        android:textColorHint="#111111"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <TextView
        android:id="@+id/signUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:hint="Sign Up"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#2D6936"
        android:textColorHint="#2D6936"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

</androidx.constraintlayout.widget.ConstraintLayout>
